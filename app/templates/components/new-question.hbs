{{#if addNewQuestion}}
<h1>Your Question</h1>
    <form>
      <div class="form-group">
        {{input value=author id="author" placeholder="Your Name"}}
      </div>

      <div class="form-group">
        {{input value=content id="content" placeholder="Your Question"}}
      </div>

      <div class="form-group">
        {{textarea value=notes id="notes" placeholder="Additional Notes"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
