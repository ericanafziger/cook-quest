{{#if editQuestion}}
<h5>Edit Question</h5>
    <form>
      <div class="form-group">
        {{input value=question.author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        {{input value=question.content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        {{textarea value=question.notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'cancel'}}>Cancel</button>
      <button {{action 'saveEdit' question}}>Save</button>
    </form>
{{else}}
  <button {{action 'editFormShow'}}>Edit Question</button>
{{/if}}
